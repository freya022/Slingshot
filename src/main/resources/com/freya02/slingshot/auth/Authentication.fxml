<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox alignment="TOP_CENTER" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="300.0" spacing="7.5" stylesheets="@Authentication.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label id="title" text="Minecraft authentication" />
      <VBox alignment="TOP_CENTER" spacing="1.0">
         <children>
            <Label text="Username / Email :" />
            <MFXTextField fx:id="identifierField" alignment="CENTER" maxWidth="-Infinity" prefColumnCount="14" styleClass="JFXTextField" />
         </children>
      </VBox>
      <VBox alignment="TOP_CENTER" spacing="1.0">
         <children>
            <Label text="Password (optional) :" />
            <MFXPasswordField fx:id="passwordField" alignment="CENTER" lineColor="#3278dc00" maxWidth="-Infinity" prefColumnCount="14" styleClass="JFXTextField" unfocusedLineColor="#4d4d4d00" />
         </children>
      </VBox>
      <HBox alignment="CENTER" spacing="8.0">
         <children>
            <MFXProgressSpinner fx:id="spinner" radius="10.0" />
            <MFXButton fx:id="logButton" defaultButton="true" graphicTextGap="8.0" onMouseClicked="#onLogClicked" prefWidth="60.0" text="Log in" />
            <MFXProgressSpinner progress="0.0" radius="10.0" visible="false" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
